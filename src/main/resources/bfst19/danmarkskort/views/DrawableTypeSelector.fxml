<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<fx:root
    type="javafx.scene.layout.VBox"
    xmlns:fx="http://javafx.com/fxml"
    xmlns="http://javafx.com/javafx"
>
    <ScrollPane pannable="true" prefWidth="200">
        <style>
            -fx-background-color: #FFFFFF;
            -fx-border-color: #000000;
            -fx-border-width: 0px 0px 0px 2px;
        </style>
        <VBox fx:id="drawableTypeLayoutBox">
            <style>
                -fx-padding: 10px;
            </style>
            <VBox>
                <style>
                    -fx-padding: 0 0 20px 0;
                </style>
                <Label text="Way types" style="-fx-font-size: 1.5em; -fx-font-weight: bold;"/>
                <Button text="Enable all drawable types" onAction="#onEnableAll" style="-fx-font-weight: bold">
                    <VBox.margin>
                        <Insets>
                            <bottom>10</bottom>
                        </Insets>
                    </VBox.margin>
                </Button>
                <Button text="Disable all drawable types" onAction="#onDisableAll" style="-fx-font-weight: bold"/>
            </VBox>
        </VBox>
    </ScrollPane>
</fx:root>