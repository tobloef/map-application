<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<fx:root
    type="javafx.scene.control.MenuBar"
    xmlns:fx="http://javafx.com/fxml"
    xmlns="http://javafx.com/javafx"
>
    <Menu text="File">
        <MenuItem text="Open map data..." onAction="#onLoadMapData"/>
        <MenuItem text="Open custom theme..." onAction="#onLoadTheme"/>
        <MenuItem text="Save route to file..." onAction="#onSaveRouteToFile"/>
    </Menu>
    <Menu text="Settings">
        <MenuItem text="Toggle way type selector" onAction="#onToggleWaytypeSelector"/>
        <SeparatorMenuItem/>
        <MenuItem text="Use theme: Default" onAction="#onUseDefaultTheme"/>
        <MenuItem text="Use theme: HD Graphics" onAction="#onUseHDGraphicsTheme"/>
    </Menu>
</fx:root>